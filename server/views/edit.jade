extends layout

block content
    form(method="post" action="/edit/#{item.id}")
        label(for="id") #
        input(type="text" class="form-control" name="id" id="id" value="#{item.id}" readonly="readonly")
        label(for="name") name
        input(type="text" class="form-control" name="name" id="name")
        label(for="artist") artist
        input(type="text" class="form-control" name="artist" id="artist")
        label(for="duration") duration
        input(type="text" class="form-control" name="duration" id="duration" value="323")
        br
        input(type="submit" value="submit" class="btn btn-primary")
    br
    a(class="btn btn-default" href="/") return